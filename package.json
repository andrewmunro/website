{
	"name": "website",
	"type": "module",
	"version": "0.1.0",
	"scripts": {
		"dev": "astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"pretty": "prettier --write .",
		"cvpdf": "pandoc src/content/pages/cv.md --template=scripts/cv/cv.tex -o public/andrew-munro-cv.pdf --lua-filter=scripts/cv/filter.lua --pdf-engine=xelatex",
