	},
	"dependencies": {
		"@astrojs/mdx": "^4.3.0",
		"@astrojs/rss": "^4.0.12",
		"@astrojs/sitemap": "^3.4.1",
		"@fontsource-variable/inter": "^5.2.5",
		"@fontsource-variable/newsreader": "^5.2.8",
		"@tailwindcss/vite": "^4.1.8",
		"astro": "^5.9.0",
		"marked": "^15.0.12",
		"tailwindcss": "^4.1.8"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.16",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.12"
	}
}